{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Back-end",
      "type": "shell",
      "command": "cd dev-concepts/backend && yarn dev"
    },
    {
      "label": "Start Front-end",
      "type": "shell",
      "command": "cd react-frontend && yarn dev"
    },
    {
      "label": "Start Android",
      "type": "shell",
      "command": "cd mobile-react-native/mobile && npx react-native run-android"
    },
    {
      "label": "Start Metro Bundler",
      "type": "shell",
      "command": "cd mobile-react-native/mobile && yarn start"
    },
    {
      "label": "Kill All Node",
      "type": "shell",
      "command": "killall node"
    }
  ]
}
