{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch Rocket ES6",
            "command": "${workspaceFolder}/rocket-es6/node_modules/.bin/babel",
            "args": ["rocket-es6/src", "--out-dir", "rocket-es6/dist", "-w", "--source-maps"],
            "type": "shell",
            "group": { "kind": "build", "isDefault": true },
            "isBackground": true
        }
    ]
}